procedure TfrmMenu.CarregaTreeViewer;
var
 i_i :integer;
 Node :TTreeNode;
begin
 for i_i := 0 to Mainmenu1.Items.Count -1 do
  AddItemMenuTree(MainMenu1.Items[i_i], 0, node);
end;

